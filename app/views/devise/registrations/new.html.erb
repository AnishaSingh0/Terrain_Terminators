<!DOCTYPE html>
<html>



  <head>
    <link rel="stylesheet" href="globals.css" />
    <link rel="stylesheet" href="styleguide.css" />
    <link rel="stylesheet" href="style.css.scss" />
  </head>
  <body>
    <div class="macbook-pro">
      <div class="frame-wrapper">
        <div class="frame">
          <div class="overlap-group-wrapper">
            <div class="overlap-group">
              <div class="rectangle"></div>
              <div class="terrain-terminator">TERRAIN TERMINATOR</div>
              <div class="div">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                <div class="rectangle-2">
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </div>
                </div>
                
                <div class="rectangle-2">
                  <div class="field">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password" %>
                  </div>
                </div>
                
                <div class="rectangle-2">
                  <div class="field">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                  </div>
                </div>

                <div class="rectangle-2">
                  <div class="field">
                    <%= f.label :username %>
                    <%= f.text_field :username %>
                  </div>
                </div>
              

                  <div class="actions">
                    <%= f.submit "Sign up" %>
                  </div>


              <p class="error-messages">
                <%= render "devise/shared/error_messages", resource: resource %>
               </p>
              <% end %>
                
              </div>
              
              <p class="p">CLICK HERE TO CREATE ACCOUNT <%= render "devise/shared/links" %> </p>
              <%= image_tag "terrain-terminator-logos-white-1-1.png", class:"img"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
